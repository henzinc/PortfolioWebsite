<style>
    .container {
        display: flex;
        padding: 48px 172px;

        > div {
            flex: 1;
        }
    }

    p {
        font-size: 2rem;
        line-height: 4rem;
    }

    span {
        color: var(--red-accent-color);
    }

    #action-bar {
        display: flex;
        align-items: center;
        gap: 20px;
        padding-top: 48px;
    }

    #social-bar {
        display: flex;
        align-items: center;
        gap: 20px;
        padding-top: 32px;
    }

    a[type="button"] {
        display: flex;
        justify-content: center;
        align-items: center;

        height: 56px;
        width: 164px;
        border: 2px solid var(--red-accent-color);
        font-size: 1.25rem;
        cursor: pointer;
        text-decoration: none;

        &:hover {
            scale: 105%;
        }

        &#contactbtn {
            background-color: #F07C75;
            color: #0B1219;
            border: 2px solid #F07C75;
            font-weight: bold;
        }
    }

    a.social {
        > img {
            height: 48px;
            width: 48px;
        }
    }
</style>

<div class="container">
    <div id="container-left">
        <p style="font-weight: 700">Hallo<span style="font-size: 2rem"> !</span></p>
        <p style="">Ich bin Henrik</p>
        <p style="font-weight: 700; letter-spacing: 0.1rem; font-size: 2.5rem">Fullstack Web-Entwickler</p>
        <div id="action-bar">
            <a type="button" id="contactbtn" href="#contact">
                Kontakt
            </a>
            <a type="button" id="cv">
                Lebenslauf
                <img src="/svgs/download.svg" alt="CV Download Icon" style="padding-left: 5px">
            </a>
        </div>
        <div id="social-bar">
            <a class="social" href="https://www.linkedin.com/in/henrik-schnell-b6a88535a/" target="_blank"><img src="/svgs/linkedin.svg" alt="LinkedIn Profil"></a>
            <a class="social" href="https://github.com/henzinc" target="_blank"><img src="/svgs/github.svg" alt="GitHub Profil"></a>
        </div>
    </div>
    <div id="container-right"></div>
</div>