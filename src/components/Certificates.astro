---
const certificates = [
    {
        name: "AWS Generative AI Applications",
        company: "Amazon Web Services (AWS)",
        companyIcon: "/svgs/aws.svg",
        link: "https://coursera.org/verify/professional-cert/597CPC8J83XC",
        description: [
            "Kenntnisse in KI-Grundlagen und AWS-Services, inkl. verantwortungsbewusster KI-Praktiken und Modellwahl für Business-Anwendungen",
            "Erfahrung in Prompt Engineering und praktischer App-Entwicklung mit Amazon Bedrock, PartyRock & weiteren AWS-Tools",
            "Architektur & Design von KI-Lösungen auf AWS unter Berücksichtigung von Datenmanagement, Sicherheit und Kostenoptimierung",
            "Umsetzung von Business-Ideen zu KI-Anwendungen – von Proof-of-Concept bis zu skalierbaren Lösungen mit AWS",
        ]
    },
    {
        name: "AWS Cloud Technical Essentials",
        company: "Amazon Web Services (AWS)",
        companyIcon: "/svgs/aws.svg",
        link: "https://coursera.org/verify/XSXS7ZC0JKG6",
        description: [
            "Fundiertes Verständnis von AWS-Konzepten und zentraler Terminologie zu Cloud-Services",
            "Kenntnisse zu AWS-Sicherheitsmaßnahmen und Identity and Access Management (IAM) für sichere Architekturen",
            "Unterscheiden und Anwenden von AWS-Compute-Services wie Amazon EC2, AWS Lambda und Amazon ECS je nach Anwendungsfall",
            "Verständnis und Einsatz von AWS-Datenbank- und Speicherlösungen wie Amazon RDS, Amazon DynamoDB und Amazon S3",
        ]
    },
    {
        name: "Google Cloud Fundamentals: Core Infrastructure",
        company: "Google Cloud Training",
        companyIcon: "/svgs/google-cloud.svg",
        link: "https://coursera.org/verify/RUSRS1AGX3DZ",
        description: [
            "Verständnis für Zweck und Mehrwert von Google-Cloud-Produkten und -Services",
            "Kenntnisse zur Struktur und Verwaltung von Infrastruktur in Google Cloud",
            "Erstellung einer grundlegenden Infrastruktur in Google Cloud",
            "Auswahl und Einsatz passender Google-Cloud-Speicheroptionen",
        ]
    }
]
---
<style>
    #certificates-container {
        display: flex;
        flex-wrap: wrap;
        padding: 48px 172px;
        gap: 20px;
    }

    .wrapper {
        display: flex;
        gap: 10px;
        flex-direction: column;
    }

    .certificate-wrapper {
        flex: 1;
        height: 400px;
        width: 400px;
        background-color: #16232c;
        border: 1px solid #172c33;
        border-radius: 10px;
        padding: 32px;
    }

    a {
        color: inherit;
        text-decoration: none;
        cursor: pointer;
        font-weight: bold;
        font-size: 1.25rem;
        line-height: 1.5rem;
    }

    a:visited {
        color: inherit;
    }

    a:hover {
        color: #efefef;
        scale: 102%;
    }

    a:active {
        color: inherit;
    }

    ul {
        margin-top: 24px;
    }

    li {
        display: flex;
        gap: 8px;
        padding: 8px 0;
    }

    .certificate-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
    }

    .certificate-description {
        line-height: normal;
    }

    img {
        height: 32px;
        width: 32px;
    }

    span.company-name {
        color: #0a66c2;
    }
</style>

<div id="certificates-container">
    {certificates.map(certificate =>
            <div class="certificate-wrapper">
                <div class="wrapper">
                    <div class="certificate-header">
                        <a href={certificate.link} target="_blank">
                            {certificate.name}
                        </a>
                        <img src=`${certificate.companyIcon}` alt=`Logo von ${certificate.company}`>
                    </div>
                    <span class="company-name">
                    {certificate.company}
                </span>
                </div>
                <ul>
                    {certificate.description.map(listItem =>
                            <li>
                                <span style="color: #f2675a">-</span>
                                <span class="certificate-description">{listItem}</span>
                            </li>
                    )}
                </ul>
            </div>
    )}
</div>