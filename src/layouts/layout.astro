---
import { SEO } from "astro-seo";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import '../global.css';

const schema = {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Henrik S.",
    "jobTitle": "Fullstack Web-Developer",
    "url": "https://henrikschnell.de",
    "sameAs": [
        "https://www.linkedin.com/in/henrikschnell/",
        "https://github.com/henrikschnell"
    ]
};
---

<html lang="de">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <SEO
            title="Henrik | Fullstack Developer – Web, Cloud & Agile"
            description="Fullstack-Webentwickler mit Erfahrung in modernen Webtechnologien, Cloud-Lösungen und agilen Methoden. Projekte, Zertifikate und Portfolio im Überblick."
            charset="UTF-8"
        />
        <script type="application/ld+json" set:html={JSON.stringify(schema)}></script>
    </head>
    <body>
        <Navigation />
        <div id="content">
            <slot />
        </div>
        <Footer />
    </body>
</html>
